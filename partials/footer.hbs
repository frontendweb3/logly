<footer
    class="mx-auto mt-12 w-full border-t border-slate-200 px-8 py-12 dark:border-slate-800"
>
    <div
        class="mx-auto flex max-w-7xl flex-col items-center justify-between gap-8 md:flex-row"
    >
        <div class="flex flex-col items-center gap-2 md:items-start">
            <a
                class="mb-5 flex items-center justify-center ps-2.5"
                href="{{@site.url}}"
            >
                {{#if @site.logo}}
                <img
                    width="100"
                    height="100"
                    class="h-12 w-12"
                    src="{{@site.logo}}"
                    alt="{{@site.title}}"
                />
                {{else}}
                <span
                    class="text-heading self-center text-lg font-semibold whitespace-nowrap"
                >
                    {{@site.title}}
                </span>
                {{/if}}
            </a>
        </div>

            {{navigation type='secondary'}} {{! partials/navigation.hbs with isSecondary=true }}
            
        <div class="flex gap-4">
            {{#if @site.twitter}}
            <a
                class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href="https://twitter.com/{{@site.twitter}}"
                target="_blank"
                rel="noopener noreferrer"
            >
                {{> "icons/twitter"}} {{!-- partials/icons/twitter.hbs --}}
            </a>
            {{/if}} {{#if @site.facebook}}
            <a
                class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href="https://facebook.com/{{@site.facebook}}"
                target="_blank"
                rel="noopener noreferrer"
            >
                {{> "icons/facebook"}} {{!-- partials/icons/facebook.hbs --}}
            </a>
            {{/if}}
        </div>
    </div>
</footer>
