<footer class="mx-auto mt-12 w-full border-t px-8 py-12">
    <div class="mx-auto flex max-w-7xl flex-col items-center justify-between gap-8 md:flex-row">
        <div class="flex flex-col items-center gap-2 md:items-start">
            <div class="flex items-center justify-center ps-2.5">
                {{#if @site.logo}}
                <span class="relative flex items-center justify-center">
                    <img width="100" height="100" class="block h-12 w-12 dark:hidden" src="{{@site.logo}}"
                        alt="{{@site.title}}" />
                    {{#if @custom.logo_dark}}
                    <img width="100" height="100" class="hidden h-12 w-12 dark:block" src="{{@custom.logo_dark}}"
                        alt="{{@site.title}}" />
                    {{else}}
                    <img width="100" height="100" class="hidden h-12 w-12 dark:block" src="{{@site.logo}}"
                        alt="{{@site.title}}" />
                    {{/if}}
                </span>
                {{else}}
                <span class="text-heading self-center text-lg font-semibold whitespace-nowrap">
                    {{@site.title}}
                </span>
                {{/if}}
            </div>
        </div>

        {{navigation type='secondary'}} {{! show secondary navigation partials/navigation.hbs }}

        <div class="flex gap-4">
            {{#if @site.twitter}}
            <a class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href={{social_url type="twitter" }} target="_blank" rel="noopener noreferrer">
                {{> "icons/twitter"}} {{!-- partials/icons/twitter.hbs --}}
            </a>
            {{/if}} {{#if @site.facebook}}
            <a class="hover:text-primary flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors dark:border-slate-700 dark:bg-slate-800"
                href={{social_url type="facebook" }} target="_blank" rel="noopener noreferrer">
                {{> "icons/facebook"}} {{!-- partials/icons/facebook.hbs --}}
            </a>
            {{/if}}
        </div>
    </div>
    {{!-- Optional copyright line controlled by theme settings --}}
    {{#if @custom.copyright_enabled}}
    <div class="mt-8 text-center text-sm">
        <p>
            {{#if @custom.copyright_text}}
                {{@custom.copyright_text}}
            {{else}}
            Copyright &copy; {{date format="YYYY"}} {{@site.title}}. <a target="_blank" class="underline underline-offset-4"  href="https://github.com/frontendweb3">Frontend Web</a>. All rights reserved.
            {{/if}}
        </p>
    </div>
    {{/if}}
</footer>