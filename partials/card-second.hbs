<article
    class="group group/card bg-white dark:bg-slate-800/30 rounded-2xl border border-slate-200 dark:border-slate-800 overflow-hidden hover:border-primary/50 
    transition-all duration-300 flex flex-col">
    <div class="aspect-video overflow-hidden h-80">
        {{#if feature_image}}
        <img class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-500"
            src="{{feature_image}}" alt="{{title}}" />
        {{/if}}
    </div>
    <div class="p-6 flex flex-col flex-1">

        <div class="flex items-center gap-2 mb-3.5">

            {{#if primary_tag}}

            <span class="px-2 py-1 bg-primary/10  text-primary text-[10px] font-bold uppercase rounded tracking-wider">
                {{primary_tag.name}} </span>

            {{/if}}

            <time class="text-xs text-slate-500" datetime="{{date format='YYYY-MM-DD'}}">{{date format='DD MMMM
                YYYY'}}</time>
        </div>

        <h2 class="text-xl font-bold leading-tight mb-4 group-hover:text-primary transition-colors">
            {{title}}
        </h2>
        <p class="text-slate-600 dark:text-slate-400 text-sm line-clamp-2 mb-4 flex-1">
            {{excerpt characters='100'}}
        </p>

        <div class="flex my-3 items-center justify-between">

            <span class="text-xs text-slate-500 font-medium">{{reading_time}}</span>
            <a href="{{url}}" class="text-primary hover:underline hover:underline-offset-4 text-sm font-semibold flex items-center gap-1">
                Read More
                {{> "icons/arrow-right" }} {{!-- partials/icons/arrow-right.hbs --}}
            </a>
        </div>
    </div>
</article>