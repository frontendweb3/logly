{{#if comments }}

<div class="w-full mx-auto mt-10 px-5 bg-white! text-black! rounded-lg shadow-sm py-10">
    
    <div class="flex items-center justify-between p-5 flex-row">
        <h2 class="mt-5 mb-10 text-left text-xl font-bold lg:text-2xl">
            Member discussion
        </h2>
        <p class="flex flex-row">
            {{comment_count empty="0" class="mx-1" singular="comment" plural="comments" autowrap="span" }}
        </p>
    </div>          
    
    {{!-- Render the comments section --}}
    <div class="w-full px-4 py-8">
       {{ comments title="" count=false mode="light" }}
    </div>

</div>

{{/if}}