<aside
    id="default-sidebar"
    aria-label="Navigation"
    class="fixed top-0 left-0 z-50 flex h-screen w-72 -translate-x-full flex-col overflow-y-auto transition-transform duration-300 ease-in-out lg:z-70 lg:translate-x-0"
>
    <button
        id="logly-sidebar-hide"
        type="button"
        class="hover:text-primary mt-12 ml-3 flex size-10 items-center justify-center rounded-full border border-slate-200 bg-white shadow-sm transition-colors lg:hidden dark:border-slate-700 dark:bg-slate-800"
    >
        <span class="sr-only">Close sidebar</span>
        {{> "icons/close" }} {{!-- partials/icons/close.hbs --}}
    </button>
    {{!-- logo --}}
    <div class="sticky mt-20 w-full flex-grow overflow-y-auto px-3 py-4">
        <a
            class="mb-5 flex items-center justify-center ps-2.5"
            href="{{@site.url}}"
        >
            {{#if @site.logo}}
            <span class="relative flex items-center justify-center">
                <img
                    width="100"
                    height="100"
                    class="block h-12 w-12 dark:hidden"
                    src="{{@site.logo}}"
                    alt="{{@site.title}}"
                />
                {{#if @custom.logo_dark}}
                <img
                    width="100"
                    height="100"
                    class="hidden h-12 w-12 dark:block"
                    src="{{@custom.logo_dark}}"
                    alt="{{@site.title}}"
                />
                {{else}}
                <img
                    width="100"
                    height="100"
                    class="hidden h-12 w-12 dark:block"
                    src="{{@site.logo}}"
                    alt="{{@site.title}}"
                />
                {{/if}}
            </span>
            {{else}}
            <span
                class="text-heading self-center text-lg font-semibold whitespace-nowrap"
            >
                {{@site.title}}
            </span>
            {{/if}}
        </a>
        <div class="my-14">{{navigation}}</div>
    </div>

    {{!-- Signup actions pinned to bottom --}}
    <div class="mt-auto px-3 py-4 pt-4">
        <div class="flex flex-col gap-3">
            {{#unless @member}}
            <a
                href="{{@site.url}}/#/portal/"
                class="hover:text-primary block w-full rounded-lg border border-slate-200 bg-white px-4 py-2.5 text-center text-sm font-semibold text-slate-900 shadow-sm transition hover:border-slate-300 focus:ring-4 focus:ring-slate-200 focus:outline-none dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:hover:border-slate-500 dark:focus:ring-slate-700"
            >
                Sign up
            </a>
            {{else}}
            <button
                data-members-signout
                class="hover:text-primary block w-full rounded-lg border border-slate-200 bg-white px-4 py-2.5 text-center text-sm font-semibold text-slate-900 shadow-sm transition hover:border-slate-300 focus:ring-4 focus:ring-slate-200 focus:outline-none dark:border-slate-700 dark:bg-slate-900 dark:text-slate-100 dark:hover:border-slate-500 dark:focus:ring-slate-700"
            >
                Sign out
            </button>
            {{/unless}}
        </div>
    </div>
</aside>
