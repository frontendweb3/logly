<a href="{{url}}">
    <div
        class="group cursor-pointer group bg-white dark:bg-slate-800/30 rounded-2xl overflow-hidden transition-all duration-300 flex flex-col">

        {{#if feature_image}}

        <div class="overflow-hidden rounded-sm h-80 mb-4">
            <img class="w-full h-80 object-cover group-hover:scale-150 transition-transform duration-500"
                srcset="{{img_url feature_image size="s" format='webp'}} 320w,
                        {{img_url feature_image size="m" format='webp'}} 600w,
                        {{img_url feature_image size="l" format='webp'}} 960w,
                        {{img_url feature_image size="xl" format='webp'}} 1200w"
                sizes="(min-width:1024px) 33vw, (min-width:768px) 50vw, 100vw"
                src="{{img_url feature_image size="l" format='webp'}}" alt="{{title}}"
                loading="lazy"
                decoding="async" />
        </div>
        {{/if}}

        <div class="flex flex-col p-5 gap-3">

            <div class="flex flex-row justify-between items-center mb-2">
                <time class="text-xs text-slate-400" datetime="{{date format='YYYY-MM-DD'}}">
                    {{date format='DD MMMM YYYY'}}
                </time>
                {{#if primary_tag}}
                <span class="text-xs text-slate-400">
                    # {{primary_tag.name}}
                </span>
                {{/if}}

            </div>

            <h2
                class="font-bold text-lg text-gray-900 dark:text-white leading-snug mb-2 group-hover:text-primary transition-colors">
                {{title}}
            </h2>
            <p class="text-slate-600 dark:text-slate-400 text-sm line-clamp-3"> {{excerpt characters='100'}} </p>
            <div class="flex items-center text-primary text-xs font-bold  tracking-wide mt-3">
                {{primary_author.name}}
                <span class="text-xs ml-1">
                    {{> "icons/arrow-right" }}
                </span>
            </div>
        </div>

    </div>

</a>