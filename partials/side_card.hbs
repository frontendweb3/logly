<a
    href="{{url}}"
    class="bg-card text-card-foreground flex w-full flex-col rounded-sm py-5 text-sm"
>
    <article class="px-4 group-data-[size=sm]/card:px-3">
        <div class="flex flex-col gap-2">
            <h2
                class="text-sm leading-tight font-bold md:text-lg/6 md:font-semibold"
            >
                {{title}}
            </h2>
            <p class="text-xs">{{excerpt characters='100'}}</p>
        </div>

        <div class="mt-4 flex items-center justify-between gap-3">
            <p class="text-xs">Published By {{primary_author.name}}</p>
            <time
                class="hidden text-xs lg:inline-block"
                datetime="{{date format='YYYY-MM-DD'}}"
                >{{date format='DD MMMM YYYY'}}</time
            >
        </div>
    </article>
</a>
