{{!< default}} 

{{#tag}}

    <header class="mx-auto w-full max-w-7xl px-8 pt-12 pb-8 md:px-12">
        <div class="flex flex-col gap-4">
            <h1 class="flex items-center gap-4 text-5xl font-black tracking-tight text-slate-900 md:text-6xl dark:text-white">
                 {{> "icons/tag"}} {{!-- partials/icons/tag.hbs --}}
                <span>{{name}} </span>
            </h1>
            {{#if description}}
            <p class="max-w-2xl text-lg leading-relaxed">
                {{description}} {{!-- Display the tag description if it exists --}}
            </p>
            {{else}}
            <p class="max-w-2xl text-lg leading-relaxed">
                A collection of {{plural ../pagination.total empty='posts'
                singular='% post' plural='% posts'}} tagged with # {{name}}.
            </p>
            {{/if}}
        </div>
    </header>

{{/tag}}

<!-- Articles Grid -->
<section class="mx-auto mt-12 w-full max-w-7xl px-8 pb-20 md:px-12">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {{#foreach posts}} 
            {{> "card" card-third=true }} {{!-- partials/card-third.hbs --}}
        {{/foreach}}
    </div>
</section>
