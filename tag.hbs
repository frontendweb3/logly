{{!< default}} {{#tag}}
<header class="mx-auto w-full max-w-7xl px-8 pt-12 pb-8 md:px-12">
    <div class="flex flex-col gap-4">
        {{!--
        <div
            class="text-primary flex items-center gap-2 font-bold tracking-tight"
        ></div>
        --}} {{!-- # TODO: Redesign --}}
        <h1
            class="flex items-center gap-4 text-5xl font-black tracking-tight text-slate-900 md:text-6xl dark:text-white"
        >
            <svg
                class="h-10 w-10 text-slate-900 md:h-14 md:w-14 dark:text-white"
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"
                ></path>
                <line x1="7" x2="7.01" y1="7" y2="7"></line>
            </svg>
            <span>{{name}} </span>
        </h1>
        <p
            class="max-w-2xl text-lg leading-relaxed text-slate-600 dark:text-[#92a4c9]"
        >
            {{description}} {{!-- Display the tag description if it exists --}}
            {{#unless description}} A collection of {{plural ../pagination.total
            empty='posts' singular='% post' plural='% posts'}} tagged with
            #{{name}}. {{/unless}}
        </p>
    </div>
</header>
{{/tag}}

<!-- Articles Grid -->
<section class="mx-auto w-full max-w-7xl px-8 pb-20 md:px-12">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {{#foreach posts}} {{> "card"}} {{!-- partials/card.hbs --}}
        {{/foreach}}
    </div>
</section>
